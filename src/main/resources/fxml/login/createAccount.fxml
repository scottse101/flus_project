<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.idatt1002.group12.flus.view.controllers.login.CreateAccountController">
   <top>
      <VBox prefWidth="680.0" BorderPane.alignment="CENTER">
         <children>
            <StackPane prefHeight="80.0" styleClass="menubar">
               <children>
                  <Label styleClass="title" text="Flus">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
         </children></VBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Create Account">
               <font>
                  <Font size="36.0" />
               </font>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="231.0" prefWidth="680.0" spacing="120.0">
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="158.0" prefWidth="197.0" spacing="22.0">
                     <children>
                        <Label fx:id="username" text="Username:" wrapText="true">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="password" prefHeight="12.0" prefWidth="87.0" text="Password:" wrapText="true">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="email" ellipsisString="" text="Email:" wrapText="true">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="phoneNumber" prefHeight="0.0" prefWidth="115.0" text="Phone number:" wrapText="true">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <TextField fx:id="usernameField" prefHeight="24.0" prefWidth="160.0" />
                        <TextField fx:id="passwordField" />
                        <TextField fx:id="emailField" />
                        <TextField fx:id="numberField" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="80.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#backToLogInPressed" text="Back to log in" />
                  <Button fx:id="createAccountButton" mnemonicParsing="false" onAction="#createAccountPressed" text="Create Account" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
